{
  "variables": {
    "version": "changeme",
    "headless": "false"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'Password1' | {{ .Vars }} sudo -S -E bash '{{ .Path }}'",
      "inline": [
        "whoami > /tmp/nimbuspacker",
        "echo '%sudo   ALL=(ALL:ALL) NOPASSWD: ALL' > /etc/sudoers.d/nimbuspacker",
        "apt update -y",
        "apt install -y ansible"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_dir": "ansible",
      "playbook_file": "ansible/nimbusserver.yml",
      "extra_arguments": [
          "--extra-vars \"version={{ user `version` }} registration_code={{ user `registration_code` }}\"",
          "-vvv",
          "-e ansible_become_password=Password1"
      ]
    }
  ],
  "builders": [
    {
      "type": "vmware-vmx",
      "name": "nimbusserver",
      "source_path": "./build/serverbase-{{ user `version` }}/serverbase-{{ user `version` }}.vmx",
      "output_directory": "build/nimbusserver-{{ user `version` }}",
      "vm_name": "nimbusserver-{{ user `version` }}",
      "headless": "{{ user `headless` }}",
      "disk_type_id": 0,
      "ssh_username": "demo",
      "ssh_password": "Password1",
      "ssh_timeout" : "30m",
      "shutdown_command": "echo 'Password1' | sudo -S shutdown -P now",
      "vmx_data": {
        "floppy0.present": "FALSE",
        "memsize": "10240",
        "numvcpus": "4",
        "cpuid.coresPerSocket": "4"
      },
      "vmx_data_post": {
        "floppy0.present": "FALSE",
        "ide0:0.present": "FALSE",
        "ethernet0.pciSlotNumber": "33",
        "ethernet0.present": "TRUE",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.connectionType": "nat",
        "ethernet0.addressType": "generated",
        "ethernet0.virtualDev": "e1000",
        "ethernet1.pciSlotNumber": "35",
        "ethernet1.present": "TRUE",
        "ethernet1.wakeOnPcktRcv": "FALSE",
        "ethernet1.startConnected": "FALSE",
        "ethernet1.virtualDev": "e1000",
        "ethernet1.addressType": "generated"
      },
      "http_directory": "http"
    }
  ]
}
