{
  "variables": {
    "version": "changeme",
    "os_version": "8.5.2111",
    "iso_name": "CentOS-{{ user `os_version` }}-x86_64-dvd1.iso",
    "iso_checksum": "3b795863001461d4f670b0dedd02d25296b6d64683faceb8f2b60c53ac5ebb3e",
    "iso_local_dir": "C:/Users/{{ env `USERNAME` }}/Downloads",
    "headless": "false"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -S -E bash '{{ .Path }}'",
      "inline": [
        "dnf install -y epel-release",
        "dnf install -y ansible"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_dir": "ansible",
      "playbook_file": "ansible/nimbusserver.yml",
      "extra_arguments": [
          "--extra-vars \"version={{ user `version` }} registration_code={{ user `registration_code` }}\"",
          "-vvv"
      ]
    }
  ],
  "builders": [
    {
      "type": "vmware-iso",
      "name": "nimbusserver",
      "output_directory": "build/nimbusserver-{{ user `version` }}",
      "vm_name": "nimbusserver-{{ user `version` }}",
      "headless": "{{ user `headless` }}",
      "guest_os_type": "centos-64",
      "version": "12",
      "disk_size": 307200,
      "disk_type_id": 0,
      "ssh_username": "root",
      "ssh_password": "Password1",
      "ssh_timeout" : "20m",
      "iso_urls": [
        "file://{{ user `iso_local_dir` }}/{{ user `iso_name` }}",
        "http://less.cogeco.net/CentOS/8/isos/x86_64/{{ user `iso_name` }}"
      ],
      "iso_checksum": "{{ user `iso_checksum` }}",
      "shutdown_command": "shutdown -P now",
      "vmx_data": {
        "floppy0.present": "FALSE",
        "memsize": "10240",
        "numvcpus": "4",
        "cpuid.coresPerSocket": "4"
      },
      "vmx_data_post": {
        "floppy0.present": "FALSE",
        "ide0:0.present": "FALSE",
        "ethernet0.pciSlotNumber": "33",
        "ethernet0.present": "TRUE",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.connectionType": "nat",
        "ethernet0.addressType": "generated",
        "ethernet0.virtualDev": "e1000",
        "ethernet1.pciSlotNumber": "35",
        "ethernet1.present": "TRUE",
        "ethernet1.wakeOnPcktRcv": "FALSE",
        "ethernet1.startConnected": "FALSE",
        "ethernet1.virtualDev": "e1000",
        "ethernet1.addressType": "generated"
      },
      "http_directory": "kickstart",
      "boot_command": "<up><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/anaconda-ks.cfg <enter><wait>"
    }
  ]
}
